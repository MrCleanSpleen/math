#!/usr/bin/env python3
import time as t
import skilstak.colors as c

if __name__ == '__main__':
    print("Welcome to the ultimate calculator")
    print("c = circle, s= square, tr = triangle, t = trapazoid, y = system")
    inpt = input(">> ")
    import area as a
    try:
        if inpt == "c":
            a.solve_circle()
        elif inpt == "s":
            a.solve_square()
        elif inpt == "tr":
            a.solve_triangle()
        elif inpt == "t":
            a.solve_trapazoid()
        elif inpt == "y":
            """system solver"""
            a.solve_system()
        elif inpt == "pt":
            a.solve_py()
        else:
            print("Please use c, s, tr, or t or y to choose which shape to find the area of.")
    except KeyboardInterrupt:
        exit()
