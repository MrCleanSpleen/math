#!/usr/bin/env python3
import math
import time
import skilstak.colors as c
def solve_vertex():
  a = float(input("a: "))
  b = float(input("b: "))
  c = float(input("c: "))
  x1 = (-1 * b)/(2.*a)
  y1 = -1 * (b**2.)/(4. * a)
  y1 = y1 + c
  print("vertex form is " + str(a) + "(x - " + str(x1) + ") + " + str(y1))

if __name__ == "__main__":
  solve_vertex()
